    {
      "name": "showArticleImage",
      "title": "Article Image",
      "description": "Display the article's featured image at the top of the reader view.",
      "type": "checkbox",
      "label": "Show",
      "default": true,
      "required": false
    },
    {
      "name": "enablePaywallHopper",
      "title": "Paywall Hopper",
      "description": "Try to retrieve paywalled or member-only content from archive services.",
      "type": "checkbox",
      "label": "Enable",
      "default": true,
      "required": false
    },
    {
      "name": "skipPreCheck",
      "title": "Check for Readability",
      "description": "Skipping always shows reader mode, even if there's no readable content.",
      "type": "checkbox",
      "label": "Skip",
      "default": true,
      "required": false
    },
    {
      "name": "verboseLogging",
      "title": "Debug Logging",
      "description": "Enable extra diagnostics for troubleshooting and bug reports.",
      "type": "checkbox",
      "label": "Enable",
      "default": false,
      "required": false
    }
