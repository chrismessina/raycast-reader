{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "reader-mode",
  "title": "Reader",
  "description": "Read the web distraction-free in Raycast.",
  "icon": "reader-icon.png",
  "author": "chrismessina",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "News",
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "open",
      "title": "Open Reader",
      "subtitle": "Reader",
      "description": "Open URL in reader mode",
      "mode": "view",
      "arguments": [
        {
          "name": "url",
          "placeholder": "https://raycast.com",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "enableAISummary",
      "title": "Automatically Generate Summaries",
      "description": "Automatically summarize articles (requires Raycast AI).",
      "type": "checkbox",
      "label": "Enable",
      "default": true,
      "required": false
    },
    {
      "name": "defaultSummaryStyle",
      "title": "Summary Style",
      "description": "Default style for summaries.",
      "type": "dropdown",
      "default": "overview",
      "required": false,
      "data": [
        { "title": "Overview", "value": "overview" },
        { "title": "Opposing Sides", "value": "opposite-sides" },
