{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "reader-mode",
  "title": "Reader",
  "description": "Read the web distraction-free in Raycast.",
  "icon": "reader-icon.png",
  "author": "chrismessina",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "News",
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "open",
      "title": "Open Reader",
      "subtitle": "Reader",
      "description": "Open URL in reader mode",
      "mode": "view",
      "arguments": [
        {
          "name": "url",
          "placeholder": "https://raycast.com",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "enableAISummary",
      "title": "Automatically Generate Summaries",
      "description": "Automatically summarize articles (requires Raycast AI).",
      "type": "checkbox",
      "label": "Enable",
      "default": true,
      "required": false
    },
    {
      "name": "defaultSummaryStyle",
      "title": "Summary Style",
      "description": "The default style for summaries.",
      "type": "dropdown",
      "default": "overview",
      "required": false,
      "data": [
        { "title": "Overview", "value": "overview" },
        { "title": "Opposing Sides", "value": "opposite-sides" },
        { "title": "The 5 Ws", "value": "five-ws" },
        { "title": "Explain Like I'm 5", "value": "eli5" },
        { "title": "Translated Overview", "value": "translated" },
        { "title": "People, Places & Things", "value": "entities" }
      ]
    },
    {
      "name": "translationLanguage",
      "title": "Translation Overview Language",
      "description": "Default language for translated summaries.",
      "type": "dropdown",
      "default": "es",
      "required": false,
      "data": [
        { "title": "Spanish", "value": "es" },
        { "title": "French", "value": "fr" },
        { "title": "German", "value": "de" },
        { "title": "Italian", "value": "it" },
        { "title": "Portuguese", "value": "pt" },
        { "title": "Japanese", "value": "ja" },
        { "title": "Chinese (Simplified)", "value": "zh-CN" },
        { "title": "Chinese (Traditional)", "value": "zh-TW" },
        { "title": "Korean", "value": "ko" },
        { "title": "Russian", "value": "ru" },
        { "title": "Arabic", "value": "ar" },
        { "title": "Hindi", "value": "hi" },
        { "title": "Dutch", "value": "nl" },
        { "title": "Polish", "value": "pl" },
        { "title": "Swedish", "value": "sv" },
        { "title": "Turkish", "value": "tr" },
        { "title": "Vietnamese", "value": "vi" },
        { "title": "Thai", "value": "th" },
        { "title": "Greek", "value": "el" },
        { "title": "Hebrew", "value": "he" }
      ]
    },
    {
      "name": "skipPreCheck",
      "title": "Check for Readability",
      "description": "Skipping always shows reader mode, even if there's no readable content.",
      "type": "checkbox",
      "label": "Skip",
      "default": true,
      "required": false
    },
    {
      "name": "verboseLogging",
      "title": "Debug Logging",
      "description": "Enable extra diagnostics for troubleshooting and bug reports.",
      "type": "checkbox",
      "label": "Enable",
      "default": false,
      "required": false
    }
  ],
  "dependencies": {
    "@chrismessina/raycast-logger": "^1.0.0",
    "@mozilla/readability": "^0.6.0",
    "@raycast/api": "^1.104.1",
    "@raycast/utils": "^2.2.2",
    "linkedom": "^0.18.12",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "@types/turndown": "^5.0.6",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
